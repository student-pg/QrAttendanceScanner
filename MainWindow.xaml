<Window x:Class="QrAttendanceScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="出席管理 QRスキャナー" Height="600" Width="800">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<ComboBox x:Name="CameraComboBox" Width="300" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
			<Button x:Name="StartCameraButton" Content="スキャン開始" Width="120" Click="StartCameraButton_Click"/>
		</StackPanel>
		
        <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15">
            <Image x:Name="CameraImage" Stretch="Uniform" />
        </Border>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Text="スキャン結果:" FontSize="18" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,5"/>
            <TextBox x:Name="ResultTextBox" 
                     IsReadOnly="True" 
                     FontSize="22" 
                     Padding="10" 
                     Height="50" 
                     Background="#EFEFEF" 
                     Text="QRコードをスキャンしてください..." 
                     VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>